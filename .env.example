# Monorepo Environment Configuration Template
# Copy this to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/partle

# Backend Security  
SECRET_KEY="your-super-secret-key-change-this-in-production"

# Email (Cloudflare Workers)
CLOUDFLARE_WORKER_URL=https://your-worker.your-subdomain.workers.dev/
CLOUDFLARE_WORKER_API_KEY=your-cloudflare-worker-api-key

# SMTP (Legacy fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=products

# Frontend API URL
VITE_API_BASE=https://your-domain.com